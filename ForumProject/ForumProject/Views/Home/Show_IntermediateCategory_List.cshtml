@using ForumProject.Entities

@model  IEnumerable<IntermediateCategory>

@{
    ViewBag.Title = "Show_IntermediateCategory_List";
}

 

<div class="container">
    <div class="row"><div class="col-lg-12 text-center"><h1 style="color:indianred; ">Categories</h1></div></div>
    <div class="row">
        @foreach (var categories in Model)
        {

            <div class="col-lg-4 col-md-4 col-sm-6 form-group">@Html.ActionLink(categories.NameOfMainCategory, "Show_Topics", new { controller = "Topic", action = "Show_Topics", id = categories.IntermediateCategoryId }, new { @class = "btn  btn-warning btn-lg" })</div>
        }

    </div>

</div>